{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src/**/*.ts",  // Assuming your TypeScript files are under src folder
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}